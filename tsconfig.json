{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "build",
        "rootDir": ".",
        "removeComments": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "typeRoots": ["./node_modules/@types", "src/types"],
        "baseUrl": "./src",
        "paths": {
            "@config/*": ["config/*"],
            "@jobs/*": ["jobs/*"],
            "@services/*": ["services/*"],
            "@models/*": ["models/*"],
            "@utils/*": ["utils/*"],
            "@controllers/*": ["controllers/*"],
            "@middlewares/*": ["middlewares/*"]
        }
    },
    "include": ["src/**/*", "tests/**/*"]
}
