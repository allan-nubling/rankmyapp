{
    "name": "api-development",
    "version": "0.0.1",
    "description": "Standard base Docker development settings",
    "author": "Allan Nubling <nubling@gmail.com>",
    "license": "MIT",
    "repository": "https://github.com/allan-nubling/api-development",
    "main": "src/app.ts",
    "scripts": {
        "test": "jest",
        "lint": "eslint --fix ./src/*",
        "dev": "ts-node-dev -r dotenv/config -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/server.ts",
        "dev:docker": "ts-node-dev --poll -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/server.ts",
        "build": "babel src --extensions \".js,.ts\" --out-dir build --copy-files --no-copy-ignored",
        "docker:test": "docker-compose -f docker-test.yml up",
        "docker:dev": "docker-compose up",
        "docker:build": "babel src --extensions \".js,.ts\" --out-dir build --copy-files --no-copy-ignored && docker build -t node/express ."
    },
    "devDependencies": {
        "@babel/cli": "^7.13.10",
        "@babel/core": "^7.13.10",
        "@babel/node": "^7.13.10",
        "@babel/preset-env": "^7.13.10",
        "@babel/preset-typescript": "^7.13.0",
        "@types/body-parser": "^1.19.0",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.11",
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.33",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.16.1",
        "@typescript-eslint/parser": "^4.16.1",
        "babel-plugin-module-resolver": "^4.1.0",
        "dotenv": "^8.2.0",
        "eslint": "^7.21.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.1.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-import-helpers": "^1.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.3",
        "ts-node-dev": "^1.1.6",
        "typescript": "^4.2.3"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "express": "^4.17.1"
    }
}
